#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define FLENGTH 100000
#define SLENGTH 100
#define TLENGTH 100000

void task_1 () {
    int i = 0;
    char a;
    char *s = (char *) malloc(sizeof(char) * FLENGTH);
    if (s == NULL) {
        printf("ERROR\n");
        return;
    }
    scanf("%c", &a);
    gets(s);
    i = 0;
    while(s[i] != '\0') {
        if (s[i] != a) {
            printf("%c", s[i]);
        }
        i++;
    }
    printf("\n");
    free(s);
}

void task_2() {
    int first_symbol_1 = 0, first_symbol_2 = 0, i = 0;
    char *num1 = (char *) malloc(sizeof(char) * SLENGTH);
    if (num1 == NULL) {
        printf("ERROR\n");
        return;
    }
    char *num2 = (char *) malloc(sizeof(char) * SLENGTH);
    if (num2 == NULL) {
        free(num1);
        printf("ERROR\n");
        return;
    }
    gets(num1);
    gets(num2);
    i = 0;
    while(1) {
        if (num1[i] == '\0') {
            break;
        }
        if (num1[i] == '1') {
            first_symbol_1 = i;
        }
        i++;
    }
    i = 0;
    while(1) {
        if (num2[i] == '\0') {
            break;
        }
        if (num2[i] == '1') {
            first_symbol_2 = i;
        }
        i++;
    }
    if (first_symbol_1 > first_symbol_2) {
        printf("1");
    }
    else if (first_symbol_1 < first_symbol_2) {
        printf("-1");
    }
    else {
        for(i = first_symbol_1; i >= 0; --i) {
            if (num1[i] > num2[i]) {
                printf("1");
                break;
            } else if (num1[i] < num2[i]) {
                printf("-1");
                break;
            } else if (i == 0) {
                printf("0");
                break;
            }
        }
    }
    free(num1);
    free(num2);
}

void task_3() {
    int i = 0, counter = 0;
    char *s = (char *) malloc(sizeof(char) * TLENGTH);
    if (s == NULL) {
        printf("ERROR\n");
        return;
    }
    FILE * input;
    input = fopen("input.txt", "r");
    if (input == NULL) {
        free(s);
        printf("CAN'T OPEN input.txt\n");
        return;
    }
    while(fgets(s, TLENGTH, input) != NULL) {
        i = 0;
        counter = 0;
        while(s[i] != '\0') {
            if (counter == 2) {
                printf("%c", s[i]);
            }
            else if (s[i] == '/') {
                if((counter == 1 && s[i-1] == '/') || (counter == 0)) {     //counter не нужно обнулять из-за грамотной работы первого условия в  if()
                    counter++;
                }
            }
            i++;
        }
        if (counter == 2) {
            printf("\n");
        }
    }
    if (fclose(input) == EOF) {
        free(s);
		printf("CAN'T CLOSE input.txt\n");
        return;
	}
	free(s);
}

int main()
{
    
    return 0;
}
