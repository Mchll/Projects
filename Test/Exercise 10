//10. Поиск подстроки в строке.
#include <iostream>
#include <string>
#define ll long long
using namespace std;
string s, tsecond, tfirst;
ll z[1000000] = {0, };
ll l, r, n, ans, i;
int main()
{
	getline(cin, tfirst);
	getline(cin, tsecond);
	s = tsecond + '#' + tfirst;
	n = s.length();
	for(i = 1 + tsecond.length(); i < n; ++i) {
		if(i <= r) {
			z[i] = min(z[i - l], r - i + 1);		
		}
		while((i + z[i] < n) && (s[unsigned int(z[i])] == s[unsigned int(z[i] + i)])) {
			++z[i];
		}
		if(i + z[i] - 1 > r) {
			l = i;
			r = i + z[i] - 1;
		}
	}
	for(i = 1 + tsecond.length(); i < n; ++i) {
		if(z[i] == tsecond.length()) {
			++ans;
		}
	}
	cout << ans;
	return 0;
}
