//10. Поиск подстроки в строке.
#include <iostream>
#include <string>
#define ll long long
using namespace std;
string s, s1, t;
ll z[1000000];
ll l, r, n, k, i;
int main()
{
	getline(cin, t);
	getline(cin, s1);
	s = s1 + '#' + t;
	n = s.length();
	for(i = 1 + s1.length(); i < n; ++i) {
		if(i <= r) {
			z[i] = min(z[i - l], r - i + 1);		
		}
		while((i + z[i] < n) && (s[unsigned int(z[i])] == s[unsigned int(z[i] + i)])) {
			++z[i];
		}
		if(i + z[i] - 1 > r) {
			l = i;
			r = i + z[i] - 1;
		}
	}
	for(i = 1 + s1.length(); i < n; ++i) {
		if(z[i] == s1.length()) {
			++k;
		}
	}
	cout << k;
	return 0;
}
