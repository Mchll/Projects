#include <stdio.h>
#include <stdlib.h>
union data {
    struct {
        unsigned int m : 23;
        unsigned int e : 8;
        unsigned int s : 1;
    } field;
    float f;
};
union data fl;
int main()
{
    unsigned int sign = 0, mantiss = 0, exponent = 0;
    int k;
    scanf("%f", &fl.f);
    sign = fl.field.s;
    exponent = fl.field.e;
    mantiss = fl.field.m;
    k = exponent - 127;
    if(k >= 0) {
        printf("(-1)^%d * 1.%d * 2^%d", sign, mantiss, exponent - 127);
    }
    else {
        printf("(-1)^%d * 1.%d * 2^(%d)", sign, mantiss, exponent - 127);
    }
    return 0;
}
