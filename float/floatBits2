#include <stdio.h>
#include <stdlib.h>
union data {
    struct {
        unsigned int m : 23;
        unsigned int e : 8;
        unsigned int s : 1;
    } field;
    float f;
};
union data fl;
struct answer {
    unsigned int s;
    unsigned int m;
    unsigned int e;
};
struct answer ans;
struct answer floatBits2 (float f) {
    fl.f = f;
    struct answer ans1;
    ans1.s = fl.field.s;
    ans1.e = fl.field.e;
    ans1.m = fl.field.m;
    return ans1;
};
int main()
{
    float f = 0;
    scanf("%f", &f);
    ans = floatBits2(f);
    int k = ans.e - 127;
    if(k >= 0) {
        printf("(-1)^%d * 1.%d * 2^%d", ans.s, ans.m, ans.e - 127);
    }
    else {
        printf("(-1)^%d * 1.%d * 2^(%d)", ans.s, ans.m, ans.e - 127);
    }
    return 0;
}
