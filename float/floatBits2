#include <stdio.h>
#include <stdlib.h>
union data {
    struct {
        unsigned int m : 23;
        unsigned int e : 8;
        unsigned int s : 1;
    } field;
    float f;
};
union data fl;
struct answer {
    unsigned int s;
    unsigned int m;
    unsigned int e;
};
struct answer ans;
void floatBits2 () {
    float f = 0;
    int f1 = 0, f2 = 0;
    scanf("%d", &f1);
    scanf("%d", &f2);
    if(f2 == 0) {
        if(f1 == 0) {
            printf("NaN\n");
            return;
        }
        else if(f1 > 0) {
            printf("+inf\n");
            return;
        }
        else if(f1 < 0) {
            printf("-inf\n");
            return;
        }
    }
    f = ((double)(f1) / f2);

    fl.f = f;
    struct answer ans1;
    ans1.s = fl.field.s;
    ans1.e = fl.field.e;
    ans1.m = fl.field.m;

    int k = ans1.e - 127;
    if(k >= 0) {
        printf("(-1)^%d * 1.%d * 2^%d", ans1.s, ans1.m, k);
    }
    else {
        printf("(-1)^%d * 1.%d * 2^(%d)", ans1.s, ans1.m, k);
    }
};
int main()
{
    
    return 0;
}
