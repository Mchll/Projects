#include <stdio.h>
#include <stdlib.h>
union data {
    float f;
    int i;
};
struct answer{
    int s;
    int e;
    int m;
};
struct answer ans;
union data fl;
struct answer floatBits1 (float f) {
    int mask_sign = 0x00000001, mask_exponent = 0x000000FF, mask_mantiss = 0x007FFFFF;
    fl.f = f;
    struct answer ans1;
    ans1.s = (fl.i >> 31) & mask_sign;
    ans1.e = (fl.i >> 23) & mask_exponent;
    ans1.m = (fl.i & mask_mantiss);
    return ans1;
}
int main()
{
    float f = 0;
    int f1 = 0, f2 = 0;
    scanf("%d", &f1);
    scanf("%d", &f2);
    if(f2 == 0) {
        if(f1 == 0) {
            printf("NaN\n");
            return 0;
        }
        else if(f1 > 0) {
            printf("+inf\n");
            return 0;
        }
        else if(f1 < 0) {
            printf("-inf\n");
            return 0;
        }
    }
    f = ((double)(f1) / f2);
    ans = floatBits1(f);
    if(ans.e - 127 >= 0) {
        printf("(-1)^%d * 1.%d * 2^%d", ans.s, ans.m, ans.e - 127);
    }
    else {
        printf("(-1)^%d * 1.%d * 2^(%d)", ans.s, ans.m, ans.e - 127);
    }
    return 0;
}
